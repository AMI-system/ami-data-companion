#:kivy 2.1.0


<SpeciesSummaryGridScreen>
    id: species_grid_screen 
    BoxLayout:
        orientation: "vertical"
        SpeciesGridLayout:
            id: species_grid
            viewclass: "SpeciesGrid"
            RecycleBoxLayout:
                # padding: (20, 20)
                # spacing: 10
                orientation: "vertical"
                default_size: None, None 
                default_size_hint: 1, None
                size_hint_y: None 
                height: self.minimum_height 

        BoxLayout:
            id: controls 
            orientation: "horizontal"
            size_hint_y: 0.1
            Button:
                text: "Back"
                on_press: root.exit()
            Button:
                text: "Refresh"
                on_press: root.refresh()
