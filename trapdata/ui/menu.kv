#:kivy 2.1.0
#:import sys sys

<DataMenuScreen>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 0
        spacing: 0
        
        Label:
            size_hint_y: 0.05
            id: status 
            text: "Loading"

        BoxLayout:
            orientation: "vertical"
            id: monitoring_sessions 
            padding: (10, 10)
            spacing: 0

        BoxLayout:
            size_hint_y: 0.1
            Button:
                text: "Exit"
                on_press: app.stop() 
            Button:
                text: "View Queue"
                on_press: root.manager.current = "queue"
            Button:
                text: "Change Directory"  # Use what is saved in DB without scanning
                on_press: root.choose_root_directory() 
            Button:
                text: "Settings"
                on_press: app.open_settings()

