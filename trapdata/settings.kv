
#:kivy 2.1.0


<SettingsScreen>
    id: settings_screen 
    BoxLayout:
        orientation: "vertical"
        
        GridLayout:
            id: settings_form 
            spacing: 20
            padding: 20
            rows: 12 
            cols: 1

            Label:
                text: "Computer Vision Models"

            Button:
                id: localization_model
                text: "Object detection model"
            
            Button:
                id: binary_classification_model 
                text: "Binary moth/non-moth classification model"
            
            Button:
                id: specific_classificiation_model 
                text: "Species classification model"

            Label:
                text: "Settings"

            Button:
                text: "GPU / CPU"

            Button:
                text: "Batch size"

            Button:
                text: "Number of CPU workers"

        BoxLayout:
            id: controls 
            orientation: "horizontal"
            size_hint_y: 0.1
            Button:
                text: "Back"
                on_press: root.exit()
