#:kivy 2.1.0
#:import sys sys

<DataMenuScreen>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 0
        spacing: 0
        
        Label:
            size_hint_y: 0.05
            id: status 
            text: "Loading"

        BoxLayout:
            orientation: "vertical"
            id: monitoring_sessions 
            padding: 20
            spacing: 20

        BoxLayout:
            size_hint_y: 0.1
            Button:
                text: "Exit"
                on_press: sys.exit(1)
            Button:
                text: "Choose Directory"
                on_press: root.choose_root_directory() 
            Button:
                text: "Rescan"  # Use what is saved in DB without scanning
            Button:
                text: "Settings"

