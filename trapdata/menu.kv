#:kivy 2.1.0
#:import sys sys

<DataMenuScreen>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 0
        spacing: 0

        BoxLayout:
            orientation: "vertical"
            id: nightly_folders
            padding: 20
            spacing: 20

        BoxLayout:
            size_hint_y: 0.1
            Button:
                text: "Exit"
                on_press: sys.exit(1)
            Button:
                text: "Choose Directory"
                on_press: root.choose_root_directory() 
            Button:
                text: "Settings"

