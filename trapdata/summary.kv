#:kivy 2.1.0


<SpeciesSummaryScreen>
    id: summary_screen
    BoxLayout:
        orientation: "vertical"
        ScrollView:
            id: summary_layout
            do_scroll_y: True
            do_scroll_x: False
            size_hint_y: 0.9
            pos_hint: {'center_x': .5, 'center_y': .5}
            GridLayout:
                id: species_list
                canvas.before:
                    Color:
                        rgba: 1, 0, 0, 1
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height
                size_hint: 1, None
                cols: 1
                spacing: 30
                padding: 30
                Label:
                    text: "Lot's of text goes here"
                    text_size: self.size
                Label:
                    text: "test"

        BoxLayout:
            id: controls 
            orientation: "horizontal"
            size_hint_y: 0.1
            Button:
                text: "Back"
                on_press: root.exit()

